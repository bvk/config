# -*- mode: shell-script -*-

#
# Configure infinite bash history and history file size.
#

HISTSIZE=""
export HISTSIZE

HISTFILESIZE=""
export HISTFILESIZE

#
# Append to history file before displaying the prompt. This will make
# history file accumulate commands from multiple terminals.
#

PROMPT_COMMAND='history -a'
export PROMPT_COMMAND

#
# Default libvirt to use system-wide VM configuration.
#

LIBVIRT_DEFAULT_URI=qemu:///system
export LIBVIRT_DEFAULT_URI

#
# Pick latest Go version from /usr/local/go directory.
#

if test -d /usr/local/go/bin; then
    PATH=$PATH:/usr/local/go/bin
fi

#
# Pick NoMachine binaries from /usr/NX/bin directory.
#

if test -d /usr/NX/bin; then
    PATH=$PATH:/usr/NX/bin
fi

#
# Binaries in $HOME override the rest.
#

PATH=$HOME/bin:$HOME/go/bin:$PATH
export PATH
